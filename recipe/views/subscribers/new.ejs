<div class="data-form">
  <form action="/subscribers/create" method="POST">
    <h2>Create new subscriber:</h2>
    <label for="inputName">Name</label>
    <input type="text" name="name" id ="inputName" placeholder="Name" autofocus/>
    <label for="inputEmail">Email</label>
    <input type="email" name="email" id ="inputEmail" placeholder="Email address" required/>
    <label for="inputZipCode">Zip Code</label>
    <input type="text" name="zipCode" id ="inputZipCode" placeholder="Zip Code" pattern="[0-9]{5}" required/>
    <button type="submit">Create</button>
  </form>
</div>
